{
  "name": "fitzy",
  "version": "1.1.0",
  "source": "src/fitzy.js",
  "description": "React UI Library",
  "main": "lib/fitzy.js",
  "module": "lib/fitzy.esm.js",
  "esnext:main": "lib/fitzy.esm.js",
  "dev:main": "lib/fitzy.dev.js",
  "scripts": {
    "clean": "rimraf lib/",
    "build": "npm-run-all clean transpile copy-typescript-definition size",
    "build:microbundle": "microbundle",
    "copy-typescript-definition": "copyfiles -f ./src/fitzy.d.ts ./lib",
    "commit": "git add . && git cz && git push",
    "transpile:main": "rollup -c config/rollup.config.js",
    "transpile:esm": "rollup -c config/rollup.config.esm.js",
    "transpile": "npm-run-all transpile:main transpile:esm",
    "smart-release": "npm run build && npm run test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "jest --coverage && ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "test:size": "bundlesize",
    "size": "node -e \"process.stdout.write('gzip size: ')\" && gzip-size src/fitzy.js",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "release": "cross-env npm run smart-release",
    "lint": "eslint src"
  },
  "typings": "./lib/fitzy.d.ts",
  "files": [
    "src",
    "lib",
    "fitzy.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenfitzpatrick/fitzy.git"
  },
  "bugs": {
    "url": "https://github.com/stevenfitzpatrick/fitzy/issues"
  },
  "keywords": [
    "react",
    "components",
    "react-component",
    "ui"
  ],
  "author": "Steven Fitzpatrick <steven.fitzpatrick1985@gmail.com>",
  "homepage": "https://fitzy-ui.com",
  "license": "MIT",
  "lint-staged": {
    "*.{js,tsx,ts}": [
      "eslint --fix",
      "git add"
    ],
    "*.{scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^22.0.4",
    "babel-plugin-emotion": "^8.0.12",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "bundlesize": "^0.15.3",
    "copyfiles": "^1.2.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.0",
    "gzip-size-cli": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "microbundle": "^0.3.0",
    "npm-run-all": "^4.1.2",
    "prettier-eslint": "^8.7.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-styleguidist": "^6.1.0",
    "rollup": "^0.54.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-memory": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-post-replace": "^1.0.0",
    "webpack": "^3.10.0",
    "webpack-blocks": "^1.0.0-rc.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "emotion": "^8.0.12",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "bundlesize": [
    {
      "path": "./lib/fitzy.esm.js",
      "threshold": "4Kb"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/(components|utils)/**/*.{js}"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*)(Test).js?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
